<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Horario" >

    <ImageView
        android:id="@+id/imghorario"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/star_wars_el_ascenso_de_skywalker" />

    <TextView
        android:id="@+id/nompelicula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Nombre de Pelicula" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ABoleto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_add" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
        <TextView
        android:id="@+id/lvBoletos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_gravity="center"
            android:textColor="#523CDB"
        android:text="0 Boletos" />
        <TextView
            android:id="@+id/lvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:textColor="#60C81F"
            android:text="$0 Pesos" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lwhorario"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>